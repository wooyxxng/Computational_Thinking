import turtle as t

t.shape("classic")
t.shapesize(1)
t.width(1)

t.penup() #y축 그리기
t.goto(0,0)
t.write("(0,0)")
t.goto(0,200)
t.write("y")
t.pendown()
t.goto(0,-200)

t.penup() #x축 그리기
t.goto(-200,0)
t.pendown()
t.goto(200,0)
t.write("x")
t.penup()

t.goto(-180,-180) #y=x 그래프 그리기
t.pendown()
t.pencolor("red")
t.width(2)
t.lt(45)
t.goto(180,180)
t.write("y=x")
t.penup()
